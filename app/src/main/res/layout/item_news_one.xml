<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp">


    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_news_one_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/item_news_one_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:gravity="start"
            android:singleLine="true"
            android:text="aaaa"
            app:layout_constraintBottom_toBottomOf="@id/item_news_one_img"
            app:layout_constraintLeft_toRightOf="@id/item_news_one_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_news_one_img"/>

        <TextView
            android:layout_marginEnd="5dp"
            android:id="@+id/item_news_one_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaa"
            app:layout_constraintBaseline_toBaselineOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_news_one_title"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>